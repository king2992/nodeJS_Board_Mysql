<!doctype HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>welcome</title>
        <script type="text/javascript" src="/node_modules/jquery/dist/jquery.js"></script>
        <script src="/js/board/list.js"></script>
    </head>
    <body>
       <h1>Board List </h1>
            <section class="board">
                <table border="1px solid #444444">
                        <thead>
                            <tr>
                                <th>번호</th>
                                <th>제목</th>
                                <th>내용</th>
                                <th>작성자</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i<rows.length; i++) { %>
                            <tr class="row">
                                <td><%=rows[i].idx%></td>
                                <td><a href="/board/detail/<%= rows[i].idx %>"><%=rows[i].title%></a></td>
                                <td><a href="/board/detail/<%= rows[i].idx %>"><%=rows[i].content%></a></td>
                                <td><a href="/board/detail/<%= rows[i].idx %>"><%=rows[i].writer%></a></td>
                            </tr>
                            <% } %>                        
                        </tbody>
                </table>
            </section>

            <div>
                <a href="/board/add">글쓰기</a>
            </div>
    </body>
</html> 